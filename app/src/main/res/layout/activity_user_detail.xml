<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Profile data -->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/user_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/retrieved_profile_user_pic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="50dp"
            android:src="@drawable/calendar_ico"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="66dp"
            app:civ_border_width="0dp"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/retrieved_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Kerry O'Connel"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


        <TextView
            android:id="@+id/retrieved_birth_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birth date: 15 OCT 1996"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="center"
            android:textColor="@color/grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Biography"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <View
            android:id="@+id/orizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/retrieved_user_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:maxLines="9"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="empty description"
            android:textColor="@color/grey"
            />


        <!-- TODO move this button -->
        <Button
            android:id="@+id/user_report_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report" />


    </LinearLayout>



</ScrollView>