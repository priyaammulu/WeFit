<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topPanel">

        <!--Profile data -->
        <RelativeLayout
            android:id="@+id/user_description"
            android:layout_below="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_profile_picture"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="66dp" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/profilePicture"
                android:layout_marginTop="18dp"
                android:text="Kerry O'Connel"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/user_name"
                android:text="Lives in Dublin"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/grey"
                />


            <TextView
                android:id="@+id/birth_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/city"
                android:text="Birth date: 15 OCT 1996"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/grey"
                />

            <TextView
                android:id="@+id/bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/birth_date"
                android:text="Biography"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

            <View
                android:id="@+id/vertical_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/bio"
                android:background="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/discription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vertical_line"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:maxLines="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="Your introduction and credits are two of the most important elements of your StarNow profile. Make the most of your introduction by writing a short, snappy paragraph about yourself. Be professional and include elements of your personality in the text. Remember to include a link to your personal website if you have one. Your credits should outline your relevant experience in the industry and be simple to read.our introduction and credits are two of the most important elements of your StarNow profile. Make the most of your introduction by writing a short, snappy paragraph aboutYour introduction and credits are two of the most important elements of your StarNow profile. Your introduction and credits are two of the most important elements of your StarNow profile. Your introduction and credits are two of the most important elements of your StarNow profile. Your introduction and credits are two of the most important elements of your StarNow profile. Your introduction and credits are two of the most important elements of your StarNow profile. "
                android:textColor="@color/grey"
                />



        </RelativeLayout>


    </ScrollView>

    <!-- edit Profile -->
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/my_edit_button"
        android:drawableBottom="@drawable/ic_edit"
        android:padding="10dp" />


</RelativeLayout>